    style.
        * 
        {
            font-family: Microsoft JhengHei;

        }
        label{
            width: 30%;
        }
        input{
            width: 70%;
            height: 100%;
        }
        select{
            width: 70%;
            height: 35px;
        }
        body {
            transition: background-color .5s;
            background-image: url("../assets/img/backgrounds/1.jpg");
        }
        textarea {
            resize: none;
            width: 70%;
        }
        .sidenav {
            height: 100%;
            width: 0;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #111;
            overflow-x: hidden;
            transition: 0.5s;
            padding-top: 60px;
        }

        .sidenav a {
            padding: 8px 8px 8px 32px;
            text-decoration: none;
            font-size: 18px;
            color: #818181;
            display: block;
            transition: 0.3s;
        }

        .sidenav a:hover {
            color: #f1f1f1;
        }

        .sidenav .closebtn {
            position: absolute;
            top: 0;
            right: 25px;
            font-size: 36px;
            margin-left: 50px;
        }

        #main {
            transition: margin-left .5s;
            padding: 16px;
        }

        @media screen and (max-height: 450px) {
            .sidenav {padding-top: 15px;}
            .sidenav a {font-size: 18px;}
        }
