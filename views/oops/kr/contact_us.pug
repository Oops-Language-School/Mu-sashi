block content
    // Start main-content
    .main-content
        // Section: inner-header
        section.inner-header.divider.parallax.layer-overlay.overlay-dark-5(data-bg-img="https://placehold.it/1920x1280")
            .container.pt-70.pb-20
                // Section Content
                .section-content
                    .row
                        .col-md-12
                            h2.title.text-white.text-center 聯絡我們
                            ol.breadcrumb.text-left.text-black.mt-10
                                li
                                    a(href="#") Home
                                li
                                    a(href="#") Pages
                                li.active.text-gray-silver Page Title

        // Divider: Contact
        section.divider
            .container
                .row.pt-30
                    .col-md-6
                        h3.line-bottom.mt-0.mb-30 連絡我們 Get in touch
                        // Contact Form
                        form#contact_form(name='contact_form', action='includes/sendmail.php', method='post')
                            .row
                                .col-sm-6
                                    .form-group
                                        label
                                            | 姓名 Name 
                                            small *
                                        input.form-control(name='form_name', type='text', placeholder='Enter Name', required='')
                                .col-sm-6
                                    .form-group
                                        label
                                            | 信箱 Email 
                                            small *
                                        input.form-control.required.email(name='form_email', type='email', placeholder='Enter Email')
                            .row
                                .col-sm-6
                                    .form-group
                                        label
                                            | 事項 Subject 
                                            small *
                                        input.form-control.required(name='form_subject', type='text', placeholder='Enter Subject')
                                .col-sm-6
                                    .form-group
                                        label 電話 Phone
                                        input.form-control(name='form_phone', type='text', placeholder='Enter Phone')
                            .form-group
                                label 訊息 Message
                                textarea.form-control.required(name='form_message', rows='5', placeholder='Enter Message')
                            .form-group
                                input.form-control(name='form_botcheck', type='hidden', value='')
                                button.btn.btn-dark.btn-theme-colored.btn-flat.mr-5(type='submit', data-loading-text='Please wait...') 送出
                                button.btn.btn-default.btn-flat.btn-theme-colored(type='reset') 重填
                        // Contact Form Validation
                        script(type='text/javascript').
                            $("#contact_form").validate({
                            submitHandler: function(form) {
                            var form_btn = $(form).find('button[type="submit"]');
                            var form_result_div = '#form-result';
                            $(form_result_div).remove();
                            form_btn.before('<div id="form-result" class="alert alert-success" role="alert" style="display: none;"></div>');
                            var form_btn_old_msg = form_btn.html();
                            form_btn.html(form_btn.prop('disabled', true).data("loading-text"));
                            $(form).ajaxSubmit({
                            dataType:  'json',
                            success: function(data) {
                            if( data.status == 'true' ) {
                            $(form).find('.form-control').val('');
                            }
                            form_btn.prop('disabled', false).html(form_btn_old_msg);
                            $(form_result_div).html(data.message).fadeIn('slow');
                            setTimeout(function(){ $(form_result_div).fadeOut('slow') }, 6000);
                            }
                            });
                            }
                            });
                    .col-md-6
