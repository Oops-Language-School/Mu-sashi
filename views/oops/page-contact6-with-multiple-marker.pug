extends L2_layout
block title
    title OoPs Language Center
    title #{title}
block style

block content
    // Start main-content
    .main-content
        // Section: inner-header
        section.inner-header.divider.parallax.layer-overlay.overlay-dark-5(data-bg-img="https://placehold.it/1920x1280")
            .container.pt-70.pb-20
                // Section Content
                .section-content
                    .row
                        .col-md-12
                            h2.title.text-white.text-center 聯絡我們
                            ol.breadcrumb.text-left.text-black.mt-10
                                li
                                    a(href="#") Home
                                li
                                    a(href="#") Pages
                                li.active.text-gray-silver Page Title
        // Section: Have Any Question
        section.divider
            .container.pt-60.pb-60
                .section-title.mb-60
                    .row
                        .col-md-12
                            .esc-heading.small-border.text-center
                                h3 Have any Questions?
                .section-content
                    .row
                        .col-sm-12.col-md-4
                            .contact-info.text-center
                                i.fa.fa-phone.font-36.mb-10.text-theme-colored
                                h4 Call Us
                                h6.text-gray Phone: +262 695 2601
                        .col-sm-12.col-md-4
                            .contact-info.text-center
                                i.fa.fa-map-marker.font-36.mb-10.text-theme-colored
                                h4 Address
                                h6.text-gray 121 King Street, Australia
                        .col-sm-12.col-md-4
                            .contact-info.text-center
                                i.fa.fa-envelope.font-36.mb-10.text-theme-colored
                                h4 Email
                                h6.text-gray you@yourdomain.com
        // Divider: Contact
        section.divider.bg-lighter
            .container
                .row.pt-30
                    .col-md-7
                        h3.line-bottom.mt-0.mb-30 Interested in discussing?
                        // Contact Form
                        form#contact_form(name="contact_form" action="includes/sendmail.php" method="post")
                            .row
                                .col-sm-6
                                    .form-group
                                        label
                                            | Name 
                                            small *
                                        input.form-control(name="form_name" type="text" placeholder="Enter Name" required="")
                                .col-sm-6
                                    .form-group
                                        label
                                            | Email 
                                            small *
                                        input.form-control.required.email(name="form_email" type="email" placeholder="Enter Email")
                            .row
                                .col-sm-6
                                    .form-group
                                        label
                                            | Subject 
                                            small *
                                        input.form-control.required(name="form_subject" type="text" placeholder="Enter Subject")
                                .col-sm-6
                                    .form-group
                                        label Phone
                                        input.form-control(name="form_phone" type="text" placeholder="Enter Phone")
                            .form-group
                                label Message
                                textarea.form-control.required(name="form_message" rows="5" placeholder="Enter Message")
                            .form-group
                                input.form-control(name="form_botcheck" type="hidden" value="")
                                button.btn.btn-dark.btn-theme-colored.btn-flat(type="submit" data-loading-text="Please wait...") Send your message
                        // Contact Form Validation
                        script(type="text/javascript").
                            $("#contact_form").validate({
                            submitHandler: function(form) {
                            var form_btn = $(form).find('button[type="submit"]');
                            var form_result_div = '#form-result';
                            $(form_result_div).remove();
                            form_btn.before('<div id="form-result" class="alert alert-success" role="alert" style="display: none;"></div>');
                            var form_btn_old_msg = form_btn.html();
                            form_btn.html(form_btn.prop('disabled', true).data("loading-text"));
                            $(form).ajaxSubmit({
                            dataType:  'json',
                            success: function(data) {
                            if( data.status == 'true' ) {
                            $(form).find('.form-control').val('');
                            }
                            form_btn.prop('disabled', false).html(form_btn_old_msg);
                            $(form_result_div).html(data.message).fadeIn('slow');
                            setTimeout(function(){ $(form_result_div).fadeOut('slow') }, 6000);
                            }
                            });
                            }
                            });
                    .col-md-5
                        // Google Map HTML Codes
                        iframe.img-fullwidth.mt-10.ml-30.ml-xs-0.ml-sm-0(frameborder='0', height='500', width='457.5', src='https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3640.5079518909933!2d120.68343291541954!3d24.15391237915732!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x34693d6656f75385%3A0xf88e88e7c292a50e!2zNDA05Y-w5Lit5biC5YyX5Y2A5LiJ5rCR6Lev5LiJ5q61MjE36Jmf!5e0!3m2!1szh-TW!2stw!4v1450667171231')
                        //#map-canvas-multipointer(data-mapstyle="default" data-height="500" data-zoom="12" data-marker="../images/map-marker.png")
                        // Google Map Javascript Codes

    // end main-content

