        function myDayOfWeek() {
            const myDate= new Date(document.getElementById('date').value)
            const days = ['週日', '週一', '週二', '週三', '週四', '週五', '週六'];
            const dayName = days[myDate.getUTCDay()];
            //console.log(dayName);
            document.getElementById('dayOfWeek').value = dayName;
        }
